{% extends 'AppBundle::base.html.twig'%}

{% block movies %}
    <h3>Films</h3>

    {% for film in films %}
        <a data-toggle="modal" data-target="#descModal" href="#" class="affiche"><img src="uploads/{{ film.image }}" alt="{{ film.nom }}" title="{{ film.nom }}" /></a>
    {% endfor %}
{% endblock movies %}
{% block modal %}
    {#{% include('AppBundle:medias:modal.html.twig') %}#}
    {% for film in films %}
    <!-- MODAL -->
    <div id="descModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <!-- inclusion de file_infos.php pour compléter le modal selon la bdd -->
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h3>{{ film.nom }}</h3>
                </div>
                <div class="modal-body">
                    <img src="uploads/{{ film.image }}" alt="{{ film.nom }}" title="{{ film.nom }}" />
                    <div class="description">
                        <p><strong>Année :</strong> {{ film.annee|date('d/m/Y') }} / <strong>Réalisateur :</strong> {{ film.realisateurs }} / <strong>Acteurs :</strong> {{ film.acteurs }}</p>
                        <p>{{ film.description }}</p>
                        <a class="bandeAnnonce" href="{{ film.trailer }}" target="_blank">Voir la bande annonce</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
{% endblock modal %}
